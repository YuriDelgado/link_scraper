<%= turbo_frame_tag "main_content" do %>
  <div class="mb-4">
    <h2 class="text-xl font-semibold">Page: <%= @page.title %></h2>
    <%= link_to "← Back to Pages", pages_path, data: { turbo_frame: "main_content" }, 
    class: "inline-block px-4 py-2 border border-blue-500 text-blue-500 rounded-lg 
            hover:bg-blue-500 hover:text-white transition-colors duration-300 ease-in-out 
            transform hover:-translate-y-0.5 hover:scale-105" %>
            
    <table class="table-auto w-full border mt-4">
      <thead>
        <tr class="bg-gray-100">
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Link</th>
        </tr>
      </thead>
      <tbody>
        <% @links.each do |link| %>
          <tr class="border-t">
            <td class="px-4 py-2"><%= link.name %></td>
            <td class="px-4 py-2">
              <%= link_to link.href, link.href, target: "_blank", class: "text-blue-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
