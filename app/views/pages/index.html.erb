<%= turbo_stream_from "pages" %>
<%= turbo_frame_tag "main_content" do %>
  <div class="mb-4">
    <h1 class="text-2xl font-bold mb-4">Scraped Pages</h1>
    
    <div class="mt-6">
      <%= turbo_frame_tag "new_page" do %>
        <%= render partial: "form", locals: { page: @page } %>
      <% end %>
    </div>
    
    <div id="pages_table" class="p-1 mt-6 rounded-2xl shadow-sm">
      <%= render @pages %>
    </div>
    <%= pagy_turbo_nav(@pagy) %>
  </div>
<% end %>

