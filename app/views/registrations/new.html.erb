<div class="w-96 mx-auto mt-12 bg-white shadow-lg rounded-2xl p-8 border border-gray-200">
  <h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Sign up</h2>

  <%= form_with model: @user, url: registrations_url, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email_address, required: true, autofocus: true,
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, required: true,
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, required: true,
            class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.submit "Create Account", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-500">
      Already have an account?
      <%= link_to "Log in", new_session_path, class: "text-blue-600 hover:underline" %>
    </p>
  </div>
</div>